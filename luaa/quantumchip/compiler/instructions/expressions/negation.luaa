/*-----------------------------------
    Negation
-------------------------------------*/

class QC_Expression_Negation : QC_Expression {

    function QC_Expression_Negation(value) {
        this.Value = value;
    }    
    
    function GetValueType() {
        return this.Value:GetValueType();
    }
    
    function GetToken() {
        return this.Token;
    }
    
    function Analyse(analyser) {
        // TODO: Negation operator
        
        this.Value:Analyse(analyser);
    }
    
    function GetChildren() {
        return { this.Value };
    }
    
    function GenerateCode(generator, tbl) {
        tbl[#tbl + 1] = "-";
        this.Value:GenerateCode(generator, tbl);
    }
    
} 